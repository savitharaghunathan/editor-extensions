{
  "name": "konveyor-go",
  "displayName": "Konveyor Go Extension",
  "description": "Go language support for Konveyor migration and modernization",
  "author": "Konveyor",
  "coreExtensionId": "konveyor.konveyor-core",
  "icon": "resources/icon.png",
  "license": "Apache-2.0",
  "version": "0.4.0",
  "main": "./out/extension.js",
  "publisher": "konveyor",
  "repository": {
    "type": "git",
    "url": "https://github.com/konveyor/editor-extensions"
  },
  "bugs": "https://github.com/konveyor/editor-extensions/issues",
  "preview": false,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Go",
    "Golang",
    "Migration",
    "Modernization"
  ],
  "engines": {
    "vscode": "^1.93.0",
    "node": ">=22.9.0",
    "npm": "^9.5.0 || >=10.5.2"
  },
  "extensionDependencies": [
    "konveyor.konveyor-core",
    "golang.go"
  ],
  "activationEvents": [
    "onLanguage:go",
    "onLanguage:go.sum",
    "onLanguage:gotmpl",
    "onLanguage:go.mod",
    "workspaceContains:go.mod",
    "workspaceContains:*/go.mod",
    "workspaceContains:go.sum",
    "workspaceContains:*/go.sum"
  ],
  "contributes": {},
  "includedAssetPaths": {
    "genericExternalProvider": "../../downloaded_assets/generic-external-provider",
    "golangDependencyProvider": "../../downloaded_assets/golang-dependency-provider"
  },
  "scripts": {
    "clean": "rimraf out",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "npm run clean",
    "build": "webpack --mode production",
    "dev": "webpack --watch --mode development"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": "eslint --fix",
    "*.{css,json,md,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "winston": "^3.17.0",
    "winston-transport-vscode": "^0.1.0",
    "vscode-jsonrpc": "^8.2.1"
  }
}
